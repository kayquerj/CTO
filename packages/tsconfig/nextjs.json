{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js App Router",
  "extends": "./base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["node", "jest", "@testing-library/jest-dom", "next", "next/image-types", "next/navigation"],
    "baseUrl": "."
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
